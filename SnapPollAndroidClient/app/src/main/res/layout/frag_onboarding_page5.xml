<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/iv_onboarding_page5_img"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/onboarding_page5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_height="1dp"
        android:layout_weight="1">

        <TextView
            style="@style/SnapPollOnboardingTextHeading"
            android:text="@string/onboarding_page5_heading" />

        <TextView
            style="@style/SnapPollOnboardingTextContent"
            android:text="@string/onboarding_page5_content" />

    </LinearLayout>

</LinearLayout>