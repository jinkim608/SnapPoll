<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:padding="6dp">

    <ImageView
        android:id="@+id/selected_friend_iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_placeholder_profile" />

    <ImageView
        android:id="@+id/selected_friend_iv_remove"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_remove" />

    <TextView
        android:id="@+id/selected_friend_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/selected_friend_iv_profile"
        android:layout_toLeftOf="@id/selected_friend_iv_remove"
        android:textSize="14sp"
        android:text="George P. Burdell" />

</RelativeLayout>