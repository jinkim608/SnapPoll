<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/divider" />

    <TextView
        android:id="@+id/lbl_gplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google+" />

    <Button
        android:id="@+id/profile_btn_signout_google"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_signout_from_google"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/profile_btn_google_revoke_access"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/btn_revoke_access"
        android:visibility="visible" />


    <View style="@style/divider" />

    <TextView
        android:id="@+id/profile_lbl_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook" />

    <Button
        android:id="@+id/profile_btn_signout_facebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_signout_from_facebook"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp" />

    <!--<Button-->
    <!--android:id="@+id/profile_btn_google_revoke_access"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="@string/btn_revoke_access"-->
    <!--android:layout_toRightOf="@id/profile_btn_google_sign_out"-->
    <!--android:visibility="visible" />-->


    <TextView
        android:id="@+id/lbl_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS" />

</LinearLayout>