<resources>

    <style name="SnapPollTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:button">@style/Widget.AppCompat.ActionButton</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary</item>

        <item name="actionBarTabStyle">@style/SnapPollTheme.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/SnapPollTheme.ActionBar</item>
    </style>

    <!--<style name="SnapPollTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar.TabView">-->
        <!--<item name="android:background">@drawable/tab_indicator_ab_snappollactionbar</item>-->
    <!--</style>-->

    <style name="SnapPollTheme.ActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@drawable/tab_indicator_ab_snappollactionbar</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
